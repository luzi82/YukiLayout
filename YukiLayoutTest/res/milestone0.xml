<screen
    id="root"
    backgroundColor="0xff7f7f7f"
    var.gap="floor(min(width,height)/20)" >

    <drag ymin="min(0,parent.height-content.y1)" >

        <trans
            id="textbox"
            var.textHeight="textWidth/8"
            var.textWidth="root.width-2*gap"
            x="gap"
            y="gap" >

            <repeat
                id="list"
                for="itemlist" >

                <trans y="list.index*(textHeight+gap)" >

                    <text
                        align="4"
                        fontTextureSize="32"
                        text="list.item.name"
                        x1="textWidth"
                        y1="textHeight"
                        color="#ffffffff" />
                </trans>
            </repeat>
        </trans>

        <void
            x="0"
            y="0" />

        <void
            x="textbox.contentRect.x1+var.gap"
            y="textbox.contentRect.y1+var.gap" />
    </drag>

</screen>